@inherits FridgeEditComponentBase

@if (ShowDialog)
{
   <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
         <div class="modal-content">
            <div class="modal-header">
               <h5 class="modal-title" id="titleLabel">@Title</h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="OnCancelEditItem">
                  <span aria-hidden="true">&times;</span>
               </button>
            </div>
            <div class="modal-body">
               <EditForm Model="@Fridge" OnValidSubmit="@AddFridge">
                  <div class="form-group">
                     <InputText id="itemName" class="form-control" @bind-Value="@Fridge.Name" placeholder="Enter Fridge Name" />
                  </div>
                  <button type="submit" class="btn btn-primary">Save</button>
                  <a class="btn btn-outline-primary" @onclick="@OnCancelEditItem">Close</a>
               </EditForm>
            </div>
         </div>
      </div>
   </div>
}
