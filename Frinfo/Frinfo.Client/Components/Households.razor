@inherits HouseholdsBase

<h3>Find your Household</h3>

<div>
   <form @onsubmit="HandleSubmit">
      <input type="text" id="householdcode" @bind-value="HouseholdCode" placeholder="Enter Household Code"></input>
      <button type="submit">Search</button>
   </form>
</div>

@if (SearchedForCode)
{
<div>
   @if (Household == null)
   {
      <a>No Household found with that code</a>
   }
   else
   {
      <a>Success</a>
   }
</div>
}
