@inherits FridgeItemEditComponentBase

@if (ShowDialog)
{
   <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
         <div class="modal-content">
            <div class="modal-header">
               <h5 class="modal-title" id="titleLabel">@Title</h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="OnCancelEditItem">
                  <span aria-hidden="true">&times;</span>
               </button>
            </div>
            <div class="modal-body">
               <EditForm Model="@FridgeItem" OnValidSubmit="@AddFridgeItem">
                  <div class="form-group">
                     <label for="itemName">Item Name:</label>
                     <InputText id="itemName" class="form-control" @bind-Value="@FridgeItem.Name" placeholder="Enter Item Name" />
                  </div>
                  <div class="form-group">
                     <label for="expirationDate">Expiration Date:</label>
                     <InputDate class="form-control" TValue="System.Nullable<System.DateTime>" id="expirationDate" @bind-Value="@FridgeItem.ExpirationDate" placeholder="Enter Expiry date" />
                  </div>
                  <div class="form-group">

                     @if (FridgeItem.ItemImage != null && FridgeItem.ItemImage.Length != 0)
                     {
                     <div>
                        <img src="@ImageSource" height="64" width="64" />
                     </div>
                     }
                     <label for="image">Image</label>
                     <input class="form-control" id="image" type="file" @ref=inputTypeFileElement />
                  </div>

                  <button type="submit" class="btn btn-primary">Save</button>
                  <a class="btn btn-outline-primary" @onclick="@OnCancelEditItem">Close</a>
               </EditForm>
            </div>
         </div>
      </div>
   </div>
}
